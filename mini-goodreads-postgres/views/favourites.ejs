            function removeFromFavourites(input){
              jQuery.ajax({url: "/favourites/remove/"+input, success: function(result){
                console.log("here");
                showSnackBar('Book added to Favourites successfully!');
                location.reload();
            }});  
            }
          
            function showSnackBar(notif){
              var x = document.getElementById("snackbar");
          
          // Add the "show" class to DIV
          x.className = "show";
          x.innerHTML = notif;
          // After 3 seconds, remove the show class from DIV
          setTimeout(function(){ x.className = x.className.replace("show", ""); }, 3000);
            }  
